{
  "name": "api-sherlock",
  "version": "1.0.0",
  "description": "#### Track and Manage Your Apis",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts --ignore client",
    "watch": "tsc -w",
    "server-prod": "NODE_PATH=./dist node ./dist/server.js",
    "server-redis": "concurrently --kill-others-on-fail \" redis-server\" \" npm run watch\" \" npm run dev\"",
    "server": "concurrently --kill-others-on-fail \" npm run watch\" \" npm run dev\"",
    "test": "jest --watchAll --detectOpenHandles",
    "test-handles": "jest --detectOpenHandles",
    "test-only": "jest --watchAll --detectOpenHandles",
    "lint": "eslint ./"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^6.4.0",
    "eslint": "^8.19.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^6.0.4",
    "express-session": "^1.17.3",
    "helmet": "^5.0.1",
    "http-status-codes": "^2.1.4",
    "ioredis": "^5.2.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "6.5.2",
    "morgan": "^1.10.0",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "engines": {
    "node": "16.x"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "coverageDirectory": "./coverage",
    "testMatch": [
      "**/?(*.)+(test).ts"
    ],
    "modulePaths": [
      "<rootDir>",
      "src"
    ],
    "resetMocks": true,
    "clearMocks": true,
    "setupFiles": [
      "./src/test/setEnvVars.ts"
    ]
  }
}
